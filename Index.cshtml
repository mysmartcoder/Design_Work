<script>
    $(document).ready(function () {
        $("#hdLocationName").val($("#ddlLocation :selected").text());
        LoadViewAppointment();
        BinIndexdDentist();
    });
    function BinIndexdDentist() {
        var LocationId = $("#ddlLocation").val();
        var ddlDentistlst = $("[id*=ddlDentist]");
        if (LocationId) {
            $.ajaxSetup({ async: false });
            $.ajax({
                url: "/Appointment/GetDentistList?LocationId=" + LocationId,
                type: "GET",
                success: function (data) {
                    if (data != '') {
                        if (data.DentistListCustom.length > 0) {
                            ddlDentistlst.empty();
                            ddlDentistlst.append($("<option></option>").val(0).html("All"));
                            $.each(data.DentistListCustom, function () {
                                if (this['UserId'] === parseInt($("#ddlselectedDentistId").val())) {
                                    ddlDentistlst.append($("<option selected='selected'></option>").val(this['UserId']).html(this['FullName']));
                                } else {
                                    ddlDentistlst.append($("<option></option>").val(this['UserId']).html(this['FullName']));
                                }
                                $("#dvnodoctor").hide();
                                $("#btnAddTeamMembers").hide();
                                $("#btnSearchAppointment").show();
                            });
                        }
                        else {
                            ddlDentistlst.empty().append('<option selected="selected" value="">No Providers Found</option>');
                            $("#dyncamicloadContenet").empty();
                            $("#dvnodoctor").show();
                            $("#btnSearchAppointment").hide();
                            $("#btnAddTeamMembers").show();
                        }
                    }
                    else {
                        ddlDentistlst.empty().append('<option selected="selected" value="">No Providers Found</option>');
                        $("#dvnodoctor").show();
                        $("#btnSearchAppointment").hide();
                        $("#btnAddTeamMembers").show();
                    }
                },
                error: function (response, status, xhr) {
                    if (response.status == 403) {
                        SessionExpire(response.responseText)
                    }
                }
            });
            $.ajaxSetup({ async: true });
        }
        else {
            ddlDentistlst.empty().append('<option selected="selected" value="">No Providers Found</option>');
            $("#dyncamicloadContenet").empty();
            $("#dvnodoctor").show();
        }
    }
    function GetAppointmentDetails() {
        var ddllocation = $("#ddlLocation").val();
        $("#hdLocationName").val($("#ddlLocation :selected").text());
        var DoctorId = $("#ddlDentist").val();
        if (DoctorId != '' && DoctorId != null) {
            $("#hdfirsttimeload").val("false")
            if ($("#hdtempselecteddate").val()) { $("#hdselecteddate").val($("#hdtempselecteddate").val()) }
            $("#hdfirsttimeload").val("false")

            LoadViewAppointment();
        }
    }
    function LoadViewAppointment() {
        var url = '@Url.Action("ViewAppointment", "Appointment")';
        $("#dvloading").show();
        $('#dyncamicloadContenet').load(url, function (response, status, xhr) {
            if (xhr.status == 403) {
                SessionExpire(xhr.responseText)
            }
        });
    }

    function ClearHiddenFileds() {
        $("#PaintId").val(0);
        $("#hdserviceId").val(0);
        $("#hdserviceName").val("");
        //$("#hdTheatreId").val(0);
        $("#hdTheatreName").val("");
        $("#hddentistId").val(0);
        $("#hddentistName").val("");
        //$("#hdFromtime").val("0");
        $("#hdRenderName").val("");
        $("#hdPaintname").val("");
        $("#hdstep2location").val("");
        //$("#hdCalenderView").val("");
    }
    function SyncNow() {
        $("#modelsynclocationview").modal('show');
    }
    function GetCheckboxId() {
        var selected = [];
        $('#lstlocation input:checked').each(function () {
            selected.push($(this).attr('id'));
        });
        if (selected.length > 0) {
            $.post("Appointment/SyncAppointmentNow", { LocationId: selected }, function (data) {
                if (data) {
                    //swal({ title: "", text: 'Your sync is in process' });
                    swal({
                        title: "",
                        text: "Your sync is in process",
                        timer: 3500,
                        showConfirmButton: false
                    });
                    window.location = document.URL;
                }
                else {
                    swal({ title: "", text: 'Faild to sync' });
                }
            });
        }
        else {
            swal({ title: "", text: 'Please select at-least one location' });
        }
    }
    function SessionExpire(responseText) {
        var response = $.parseJSON(responseText);
        window.location = response.LogOnUrl;
    }
